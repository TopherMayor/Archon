# Server Configuration
PORT=3000
NODE_ENV=development

# WebRTC Configuration
WEBRTC_PORT=8080
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_CREDENTIAL=

# Camera Configuration
CAMERA_DEVICE_PATH=/dev/video0
STREAM_QUALITY_PRESET=medium
